<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/back"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="com.pratikpatil.blooddonation.Activities.RequestActivity">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the message that you have to post according to your requirement"
        android:textSize="20dp"
        android:padding="20dp"

        android:layout_marginBottom="8dp"
        android:id="@+id/textViewNumber"
        />

    <TextView
        android:id="@+id/textViewNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number:"
        android:layout_below="@+id/textViewNumber"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_below="@id/textViewNumberLabel"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message:"
        android:textSize="16sp"
        android:layout_below="@id/editTextNumber"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:layout_below="@id/textViewMessageLabel"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMessage"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="Submit" />

</RelativeLayout>
